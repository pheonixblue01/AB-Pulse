<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="@layout/activity_edit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navbar"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:visibility="visible">

        <Button
            android:text="@string/title_alarms_button"
            android:id="@+id/AlarmsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/AlertsButton"
            android:layout_centerVertical="true"
            android:enabled="true"
            android:visibility="visible" />

        <Button
            android:text="@string/title_alerts_button"
            android:id="@+id/AlertsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible" />

        <Button
            android:text="@string/title_activities_button"
            android:id="@+id/ActivitiesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/AlertsButton"
            android:layout_centerVertical="true"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/edit_alarm"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/Activity_Time"
            android:layout_weight="0.06"
            android:text="Time - Activity"
            android:editable="true"
            android:enabled="true"
            android:saveEnabled="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Frequency_edit"
            android:spinnerMode="dropdown" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/">

            <ToggleButton
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/Monday"
                android:checked="false" />

            <ToggleButton
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:text="M"
                android:id="@+id/Monday"
                android:checked="false" />

            <ToggleButton
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:text="T"
                android:id="@+id/toggleButton5"
                android:checked="false" />

            <ToggleButton
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:text="W"
                android:id="@+id/toggleButton6"
                android:checked="false" />

            <ToggleButton
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:text="Th"
                android:id="@+id/toggleButton7"
                android:checked="false" />

            <ToggleButton
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:text="F"
                android:id="@+id/toggleButton4"
                android:checked="false" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/toggleButton8"
                android:checked="false" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Duration_edit"
            android:layout_weight="0.06"
            android:text="Duration" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/Alarm_end_edit"
            android:layout_weight="0.1"
            android:text="Alarm End" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harman Visual Settings"
            android:id="@+id/Harman_settings_button"
            android:layout_gravity="center_horizontal"
            android:allowUndo="true"
            android:clickable="true"
            android:enabled="true"
            android:longClickable="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Openapp_edit_alarm"
            android:spinnerMode="dropdown" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/music_choices"
            android:spinnerMode="dropdown" />

        <Button
            android:layout_width="416dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="403dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button2"
            android:layout_weight="0.06" />

    </LinearLayout>


</RelativeLayout>

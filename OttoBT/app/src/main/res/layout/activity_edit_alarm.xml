<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context="com.example.cameroni.ottobt.EditAlarm"
    android:id="@+id/edit_alarmed"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/edit_alarm"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.design.widget.AppBarLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/Alarm_Time"
            android:layout_weight="0.06"
            android:text="Time - Alarm"
            android:editable="true"
            android:enabled="true"
            android:saveEnabled="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/Date_edit"
            android:layout_weight="0.06"
            android:text="Date"
            android:editable="true"
            android:enabled="true"
            android:saveEnabled="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Frequency_edit"
            android:spinnerMode="dropdown" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Duration_edit"
            android:layout_weight="0.06"
            android:text="Duration" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/Alarm_end_edit"
            android:layout_weight="0.1"
            android:text="Alarm End" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harman Visual Settings"
            android:id="@+id/Harman_settings_button"
            android:layout_gravity="center_horizontal"
            android:allowUndo="true"
            android:clickable="true"
            android:enabled="true"
            android:longClickable="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Openapp_edit_alarm"
            android:spinnerMode="dropdown" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/music_choices"
            android:spinnerMode="dropdown" />

        <Button
            android:layout_width="416dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="403dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button2"
            android:layout_weight="0.06" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
